<h1>Login</h1>


<%= form_tag author_sessions_path, method: :post, class: "form-horizontal" do %>
  <div>
    <div class="col-sm-2">
      <%= label_tag :email %>
    </div>
    <div class="col-sm-10">
      <%= text_field_tag :email %>
    </div>
    <br />
  </div>
  <div>
    <div class="col-sm-2">
      <%= label_tag :password %>
    </div>
    <div class="col-sm-10">
      <%= password_field_tag :password %>
    </div>
    <br />
  </div>
  <div class="col-sm-2">
    <%= submit_tag "Login", class: "btn btn-primary" %>
  </div>
<% end %>
