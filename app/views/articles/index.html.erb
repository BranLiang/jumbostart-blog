
<%= button_to "Create a New Article", new_article_path, method: :get, class: "btn btn-success" %>


<% @articles.each do |article| %>
  <h2>
    <%= link_to article.title, article_path(article) %>
  </h2>

  <!-- <% article.tags.each do |tag| %>
    <span class="label"><%= link_to tag.name, tag_path(tag) %></span>
  <% end %> -->

  <p><span class="glyphicon glyphicon-time"></span>
    <%= article.created_at %>
  </p>

  <hr>

  <p>
    <%= article.body[0..400] + " ..." %>
  </p>

  <%= button_to "Read More", article_path(article), method: :get, class: "btn btn-primary" %>

  <hr>
<% end %>
